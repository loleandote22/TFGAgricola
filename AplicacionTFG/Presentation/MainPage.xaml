<Page xmlns:ut="using:Uno.Themes" x:Class="AplicacionTFG.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
    <!--<Page.DataContext>
        <local:MainViewModel/>
    </Page.DataContext>-->

    <Grid utu:SafeArea.Insets="VisibleBounds" >
        <NavigationView PaneDisplayMode="LeftCompact" SelectedItem="{Binding ElementoSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            x:Name="NavViewControl" uen:Region.Attached="True"   utu:SafeArea.Insets="VisibleBounds" IsBackButtonVisible="Collapsed" IsSettingsVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Inicio" Icon="Home" uen:Region.Name="Inicio" IsSelected="True"/>
                <NavigationViewItem x:Name="InventarioPage" Content="Inventario" Icon="Help" uen:Region.Name="Inventario" uen:Navigation.Request="-/Inventario" />
                <NavigationViewItem x:Name="ElementoPage" Content="Personal" Icon="Home" uen:Region.Name="Personal"/>
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Usuario" Icon="Contact2"/>
                <NavigationViewItem x:Name="ConfiguracionPage" Content="Configuración" Icon="Setting" uen:Region.Name="Configuracion" />
            </NavigationView.FooterMenuItems>
            <ContentControl uen:Region.Attached="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
        </NavigationView>
    </Grid>
</Page>
