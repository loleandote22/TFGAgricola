<Page xmlns:ut="using:Uno.Themes"
    x:Class="AplicacionTFG.Presentation.Inventario.InventarioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AplicacionTFG.Presentation.Inventario"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:utu="using:Uno.Toolkit.UI"
    xmlns:um="using:Uno.Material"
    xmlns:uen="using:Uno.Extensions.Navigation.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid RowDefinitions="Auto,*">
        <TextBlock Text="{Binding Titulo_Loc}" FontSize="40"  VerticalAlignment="Top" Margin="0,10,0,0"/>
        <utu:ResponsiveView Grid.Row="1">
            <utu:ResponsiveView.NormalTemplate>
                <DataTemplate>
                    <Grid>
                        <ListView ItemsSource="{Binding Inventarios}" SelectedItem="{Binding InventarioSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <utu:Card HeaderContent="{Binding Nombre}" SubHeaderContent="{Binding DescripcionCorta}" AutomationProperties.AutomationId="Outlined_Card" Style="{StaticResource OutlinedCardStyle}" Width="300" HorizontalAlignment="Left"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Button Style="{StaticResource FabStyle}" ToolTipService.ToolTip="Añadir" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="0,10,10,0" Command="{Binding AddInventarioCommand}">
                            <ut:ControlExtensions.Icon>
                                <SymbolIcon Symbol="Add" />
                            </ut:ControlExtensions.Icon>
                        </Button>
                        <local:AnadirElementoControl Visibility="{Binding VerAnadir, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </DataTemplate>
            </utu:ResponsiveView.NormalTemplate>
            <utu:ResponsiveView.WideTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*, Auto">
                        <GridView ItemsSource="{Binding Inventarios}" SelectedItem="{Binding InventarioSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <utu:Card HeaderContent="{Binding Nombre}" SubHeaderContent="{Binding DescripcionCorta}" AutomationProperties.AutomationId="Outlined_Card" Style="{StaticResource OutlinedCardStyle}" Width="300" Height="300"/>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                        <Button Style="{StaticResource FabStyle}" ToolTipService.ToolTip="Añadir" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="0,10,10,0" Command="{Binding AddInventarioCommand}">
                            <ut:ControlExtensions.Icon>
                                <SymbolIcon Symbol="Add" />
                            </ut:ControlExtensions.Icon>
                        </Button>
                        <local:AnadirElementoControl  Visibility="{Binding VerAnadir, UpdateSourceTrigger=PropertyChanged}" Width="300" Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
            </utu:ResponsiveView.WideTemplate>
        </utu:ResponsiveView>
        <TextBlock Visibility="{Binding VerNoHay, UpdateSourceTrigger=PropertyChanged}" Text="{Binding NoElementos_Loc}" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
    </Grid>
</Page>
